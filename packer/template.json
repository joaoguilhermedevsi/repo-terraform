{


  "variables": {
    "application_name": "tray-ecommerce",
    "image": "ubuntu18.04",
    "application_environment": "teste",
    "aws_region": "us-east-1"

  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "associate_public_ip_address": true,
      "force_deregister": false,
      "force_delete_snapshot": false,
      "run_tags": {
        "Name": "builder-image-{{ user `application_name` }}-{{ user `image` }}",
        "Environment": "{{ user `application_environment` }}",
        "Application": "{{ user `application_name` }}",
        "Layer": "devops"
      },
      "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "tray-ecommerce {{timestamp}}",
      "ami_description": "from {{.SourceAMI}}",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Extra": "{{ .SourceAMITags.TagName }}"
      }
    }
  
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/site.yml",
      "user": "ubuntu",
      "extra_arguments": [
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python3"
      ],
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False"
      ]
    }
  ]
}
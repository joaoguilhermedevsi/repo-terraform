[www-data]
    user = {{ www_user }}
    group = {{ www_group }}
    listen = {{ www_listen }}
    listen.allowed_clients = {{ www_listen_allowed_clients }}
    listen.group = {{ www_listen_group }}
    listen.owner = {{ www_listen_owner }}
    php_admin_flag[log_errors] = True
    php_admin_value[error_log] = /var/log/php-fpm/www-slow.log
    php_admin_value[memory_limit] = {{ www_php_admin_value_memory_limit }}
    php_value[session.save_handler] = {{ www_php_value_session_save_handler }}
    php_value[session.save_path] = {{ www_php_value_session_save_path }}
    php_value[soap.wsdl_cache_dir] = {{ www_php_value_soap_wsdl_cache_dir }}
    pm = {{ www_pm }}
    pm.max_children = {{ www_pm_max_children }}
    pm.max_requests = {{ www_pm_max_requests}}
    pm.process_idle_timeout = {{ www_pm_process_idle_timeout }}
    slowlog = /var/log/php-fpm/www-slow.log
    clear_env=no
    env[ENCRYPT_KEY]=$ENCRYPT_KEY
    pm.status_path = {{ www_pm_status_path }}
